block content
  
  .main-content(style="padding-bottom: 0px;")
    .wrap

     .right-content
      .right-content-heading
       .right-content-heading-left
         ul.categories(style="font-family:Arial")
          - for( var i in listCategory){ 
             li(id="#{listCategory[i]['_id']}",style="float:left",onmouseover="showCategory('#{listCategory[i]['_id']}')",onmouseout="hideCategory('#{listCategory[i]['_id']}')")
               a(href="#")
                span
                 i(class="#{listCategory[i]['icon']}",style="margin-left:20%") 
                |#{listCategory[i]['name'].toUpperCase()}
               div(id="cate#{listCategory[i]['_id']}",class="category-detail")
                ul(style="margin-left:35px")
                  -var j=0;
                  -while(j<listFilmType[listCategory[i]['_id']].length){
                     ul(style="float:left")
                       
                       - for(var k=0;k<global.numDisplayCate && j< listFilmType[listCategory[i]['_id']].length;k++,j++){ 
                            li #{listFilmType[listCategory[i]['_id']][j]['type_name']}
                       - }
                  -}   
               
          - }
       .right-content-heading-right
        .social-icons
         ul
              li <a class="facebook" href="#" target="_blank"> </a>
              li <a class="twitter" href="#" target="_blank"></a>
              li <a class="googleplus" href="#" target="_blank"></a>
              li <a class="pinterest" href="#" target="_blank"></a>
              li <a class="dribbble" href="#" target="_blank"></a>
              li <a class="vimeo" href="#" target="_blank"></a>

        .clear
      .row
       
       
      .row
       div(class="carousel slide multi-item-carousel",id="theCarousel")
         .carousel-inner
            - for(var i=0;i<listFilm.length;i++){var myClass="item";
                   -if(i==0) myClass+=" active";
                     div(class="#{myClass}")
                       .content-grid(style="width:227px")
                          a(href="#{global.site_path}video/view?id=#{ listFilm[i]['_id']}") 
                            img(src="#{listFilm[i]['image']}",style="width:227px;height:227px")
                          h3(style="margin:0 0 0 0") #{ listFilm[i]['name'].toUpperCase()}
                          ul
                            li 
                             a(href="#")
                              img(src="images/likes.png",title="#{ listFilm[i]['name']} - #{global.dns}")
                            li 
                             a(href="#")
                              img(src="images/views.png",title="#{ listFilm[i]['name']} - #{global.dns}")
                            li 
                             a(href="#")
                              img(src="images/link.png",title="#{ listFilm[i]['name']} - #{global.dns}")
                          a(href="#{global.site_path}video/view?id=#{ listFilm[i]['_id']}",class="button") Xem ngay
                      
                 
            -  }
          
          
    
         a(class="left carousel-control",href="#theCarousel",data-slide="prev")
          i(class="glyphicon glyphicon-chevron-left")
         a(class="right carousel-control",href="#theCarousel",data-slide="next")
          i(class="glyphicon glyphicon-chevron-right")
