extends header

block content
  
  .main-content(style="padding-bottom: 0px;")


     .right-content
      .right-content-heading
       .right-content-heading-left
         ul.categories
          - for( var i in listCategory){ 
             li(id="#{listCategory[i]['_id']}",style="float:left",onmouseover="showCategory('#{listCategory[i]['_id']}')",onmouseout="hideCategory('#{listCategory[i]['_id']}')")
               a(href="#")
                span
                 i(class="#{listCategory[i]['icon']}",style="margin-left:20%") 
                |#{listCategory[i]['name'].toUpperCase()}
               div(id="cate#{listCategory[i]['_id']}",class="category-detail")
                ul(style="margin-left:35px")
                  -var j=0;
                  -while(j<listFilmType[listCategory[i]['_id']].length){
                     ul(style="float:left")
                       
                       - for(var k=0;k<global.numDisplayCate && j< listFilmType[listCategory[i]['_id']].length;k++,j++){ 
                            li #{listFilmType[listCategory[i]['_id']][j]['type_name']}
                       - }
                  -}   
               
          - }
       .right-content-heading-right
        .social-icons
         ul
              li <a class="facebook" href="#" target="_blank"> </a>
              li <a class="twitter" href="#" target="_blank"></a>
              li <a class="googleplus" href="#" target="_blank"></a>
              li <a class="pinterest" href="#" target="_blank"></a>
              li <a class="dribbble" href="#" target="_blank"></a>
              li <a class="vimeo" href="#" target="_blank"></a>

        .clear
      .row
       
            
       div(style="width:90%;margin:5%")
        .inner-page 
         .title
           h2 #{film['name']} ( #{film['english_name']} )
         .video-inner 
         -if(film['listEp'][0]!=null)
          iframe(src="#{film['listEp'][0]['link']}",width="100%",height="500px",frameborder="0",webkitallowfullscree,mozallowfullscreen allowfullscreen)
         -else
          h2 VIDEO DANG CẬP NHẬT
        .video-detail
         .left-sidebar
          .sidebar-boxs
           .clear
            .type-videos
              h2 Giới Thiệu
              ul
               li Tên phim: #{film['name']}
               li Tên tiếng Anh: #{film['english_name']}
               li Năm sản xuất: #{film['year_of_production']}
               li Thể loại film:
               li Quốc gia: #{film['name']}
               li Thời lượng: #{film['directory']}
               li IMDb: #{film['imdb']}
               li Nội dung: #{film['detail']}
              ul
               li Từ khóa: #{film['keyword']}
              h2 Diễn viên
               
         div(style="float:left")  
         
  .clear
  block footer
  .copy-right
       p| Design by 
                     a(href="") achiles
  .footer
    script(type='text/javascript', src='/libs/jquery/jquery-2.1.4.min.js')
    script(type='text/javascript', src='/javascripts/script.js')
    script(type='text/javascript', src='/libs/bootstrap/js/bootstrap.min.js')
    script(type='text/javascript', src='/libs/font-awesome/js/font-awesome.min.js')